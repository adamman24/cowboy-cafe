@page
@using  CowboyCafe.Data
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">




    <form method="post">
        <h1 class="display-4">Welcome to Cowboy Cafe</h1>
        

        <div>
            <h5>Catagories</h5>
            @foreach (string order in Menu.Categories)
            {
                <label>
                    <input type="checkbox" name="Category" value="@order" />
                    @order
                </label>
            }

            <h5>Prices</h5>
            <div>
                Between $
                <input name="MinPrice" type="number" min="0" max="50" step="1.00" placeholder="min" />
                and
                <input name="MaxPrice" type="number" min="0" max="50" step="1.00" placeholder="max" />
            </div>

            <h5>Calories</h5>
            <div>
                Between
                <input name="MinCalories" type="number" min="0" max="2000" step="50" placeholder="min" />
                and
                <input name="MaxCalories" type="number" min="0" max="2000" step="50" placeholder="max" />
                `
            </div>

        </div>

        <div id="search">
            <input type="text" name="SearchItems" value="@Model.SearchItems" />
            <input type="submit" value="Search" />
        </div>


        <p>We at Cowboy Cafe are proud to bring you authentic trail meals from the American West. Shake off the dust on your boots and sake your thirst with one of our old-fashioned hand-jerked sodas. Dip your Pan de Campo into a bowl of beans. Or conquer the the mighty Texas Triple Burger! You’ve had a hard ride - so take it easy with us.</p>


        <h2>Entrees</h2>

        @foreach (IOrderItem item in Model.EntreeItems)
        {
            <div class="menu-item">
                <p>
                    <b>@item.ToString() </b>
                    Price: $@item.Price.ToString()
                    Calories:
                    @if (item is Entree entree)
                    {
                        @entree.Calories.ToString()
                    }

                </p>
            </div>
        }

        <h2>Sides</h2>

        @foreach (CowboyCafe.Data.Side item in Model.SideItems)
        {
            @foreach (CowboyCafe.Data.Size size in Enum.GetValues(typeof(CowboyCafe.Data.Size)))
            {
                <div class="menu-item">
                    <p>
                        <b>@item.ToString()</b>
                        Price: $@item.Price.ToString()
                        Calories: @item.Calories.ToString()
                    </p>
                </div>
            }
        }

        <h2>Drinks</h2>

        @foreach (CowboyCafe.Data.Drink drink in Model.DrinkItems)
        {
            @foreach (CowboyCafe.Data.Size size in Enum.GetValues(typeof(CowboyCafe.Data.Size)))
            {
                <div class="menu-item">
                    <p>
                        <b>@drink.ToString()</b>
                        Price: $@drink.Price.ToString()
                        Calories: @drink.Calories.ToString()
                    </p>
                </div>
            }
        }
    </form>
</div>

